{
    "manifest_version": 3,
    "name": "Secret Scanner",
    "description": "Scan web pages for API keys or passwords",
    "version": "__VERSION__",
    "version_name": "__VERSION_NAME__",
    "minimum_chrome_version": "140",
    "permissions": ["debugger", "activeTab", "storage"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon-disabled-16.png",
            "32": "images/icon-disabled-32.png",
            "48": "images/icon-disabled-48.png",
            "128": "images/icon-disabled-128.png"
        }
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "host_permissions": ["<all_urls>"],
    "content_security_policy": {
        "extension_pages": "default-src 'self'; img-src 'self' data:;"
    }
}
